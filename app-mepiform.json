{
  "name": "MEPIFORM Order Automation",
  "description": "Automated MEPIFORM product ordering system for Oriola4Care",
  "repository": "https://github.com/your-username/mepiform-automation",
  "keywords": ["nodejs", "automation", "mepiform", "oriola", "playwright", "scheduling"],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "https://github.com/microsoft/playwright-heroku-buildpack"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "env": {
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "TZ": {
      "description": "Timezone for Swedish business hours",
      "value": "Europe/Stockholm"
    },
    "MEPIFORM_USERNAME": {
      "description": "Oriola4Care username",
      "value": "tipsboden@hotmail.com"
    },
    "MEPIFORM_PASSWORD": {
      "description": "Oriola4Care password",
      "required": true
    },
    "AUTO_START": {
      "description": "Automatically start automation within work hours",
      "value": "true"
    },
    "DEBUG_MODE": {
      "description": "Enable debug logging",
      "value": "false"
    },
    "HEADLESS_MODE": {
      "description": "Run browser in headless mode (must be true for Heroku)",
      "value": "true"
    },
    "MAX_MEMORY": {
      "description": "Maximum memory usage for browser",
      "value": "512"
    }
  },
  "scripts": {
    "postdeploy": "echo 'MEPIFORM automation deployed successfully. Automation will start at next Swedish business day 07:00.'"
  }
}