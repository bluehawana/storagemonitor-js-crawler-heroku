# LOGIN CREDENTIALS
LOGIN_URL=https://your-website.com/login
USERNAME=your-email@example.com
PASSWORD=your-password

# LOGIN SELECTORS (adjust based on target website)
USERNAME_SELECTOR=#j_username
PASSWORD_SELECTOR=#j_password
LOGIN_BUTTON_SELECTOR=button[type="submit"]
LOGIN_SUCCESS_SELECTOR=.main-content

# PRODUCTS TO MONITOR
PRODUCT1_URL=https://your-website.com/product1
PRODUCT2_URL=https://your-website.com/product2

# STOCK SELECTORS (adjust based on target website)
STOCK_SELECTOR=.stock-status

# MONITORING SETTINGS
ACTIVE_START_HOUR=8
ACTIVE_END_HOUR=18
TIMEZONE=America/New_York

# ORDER AUTOMATION (set to true to enable auto-ordering)
AUTO_ORDER_ENABLED=false
MAX_ORDER_AMOUNT=500
QUANTITY_PER_ORDER=1

# NOTIFICATIONS
NOTIFICATION_EMAIL=your-email@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# DATABASE (if using PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/health_monitor